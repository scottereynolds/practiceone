{% extends 'base.html.twig' %}
{% block title %}Business{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row my-2">
            <div class="col-6">
                <h4>Business</h4>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" href="{{ path('app_business_edit', {'id': business.id}) }}">Edit</a>
                <a class="btn btn-secondary" href="{{ path('app_business_index') }}">Back to list</a>
            </div>
        </div>
        <div class="row my-2">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ business.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ business.name }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ business.address }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ business.city }}</td>
                    </tr>
                    <tr>
                        <th>State</th>
                        <td>{{ business.state }}</td>
                    </tr>
                    <tr>
                        <th>Postalcode</th>
                        <td>{{ business.postalcode }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ business.description }}</td>
                    </tr>
                    <tr>
                        <th>Tags</th>
                        <td>
                            {% for tag in business.getTags() %}
                                {{ tag.getName() }}{% if not loop.last  %}, {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Created</th>
                        <td>{{ business.created ? business.created|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Modified</th>
                        <td>{{ business.modified ? business.modified|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row my-2">
            <div class="col-12 text-end">
                {{ include('business/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
