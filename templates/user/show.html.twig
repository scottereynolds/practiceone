{% extends 'base.html.twig' %}
{% block title %}User{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row my-2">
            <div class="col-6">
                <h4>User</h4>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                <a class="btn btn-secondary" href="{{ path('app_user_index') }}">Back to list</a> 
            </div>
        </div>
        <div class="row my-2">
            <div class="col-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>First Name</th>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row my-2">
            <div class="col-12 text-end">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
